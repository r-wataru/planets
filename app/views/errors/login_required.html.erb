<%
  form_options = { url: :session, 
    html: { class: "form-signin", role: 'form' }}
%>

<div class="panel panel-default">
  <div class="panel-heading">Wellcome to Planets Web Site!</div>
  <div class="panel-body">
    <b>ログインが必要です</b>
    <%= form_for @form, form_options do |f| %>
      <%= f.text_field :email, class: 'form-control', placeholder: 'メールアドレスもしくはログイン名', required: true, autofocus: true %>
      <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード', required: true %>
      <%= hidden_field_tag "from", "", value: @from %>
      <button class="btn btn-primary btn-block" type="submit">
        ログイン
      </button>
    <% end %>
    <button class="btn btn-primary btn-block session-form-button" type="submit"
            onClick="window.open('/auth/facebook','fb','width=700,height=300');return false;">
      <%= fa_icon('facebook-square', text: "Facebookでログイン") %>
    </button>
    <button class="btn btn-success btn-block session-form-button" type="submit">
      <%= link_to fa_icon('plug', text: "新規作成"), :new_new_email %>
    </button>
    <p><%= link_to "パスワード忘れた？", :forgot_password_emails, class: "session-form-button" %></p>
  </div>
</div>

<script type="text/javascript">
  $.testFunc = function(val) {
    location = (val);
  };
</script>
