<%
  @page_title_icon = 'question_circle'
  @page_title_text = "問い合わせ"

  @breadcrumbs = [[ 'home', 'トップ', :root ]]
%>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">問い合わせ一覧</div>
      <div class="panel-body">
        <% if @inquiries.present? %>
          <table class="table table-striped table-hover" style="table-layout: auto;">
            <tr>
              <td>お名前</td>
              <td>題名</td>
            </tr>
            <% @inquiries.each do |inquiry| %>
              <tr>
                <td><%= truncate(inquiry.name, length: 15) %></td>
                <td><%= link_to truncate(inquiry.subject, length: 20), inquiry %></td>
              </tr>
            <% end %>
          </table>
        <% else %>
          <p>問い合わせはありません。</p>
        <% end %>
      </div>
    </div>
  </div>
</div>