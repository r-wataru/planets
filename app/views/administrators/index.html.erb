<%
  @page_title_icon = 'unlock'
  @page_title_text = "代理ログイン"

  @breadcrumbs = [
    [ 'home', 'トップ', :root ]]
%>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">ユーザー一覧</div>
      <div class="panel-body">
        <table class="table table-striped table-hover" style="table-layout: auto;">
          <tr>
            <td>ユーザー</td>
            <td>アクション</td>
          </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.display_name %></td>
            <td class="action">
              <%= link_to "代理ログイン", administrators_path(user_id: user.id), method: :post %>
            </td>
          </tr>
        <% end %>
      </div>
    </div>
  </div>
</div>