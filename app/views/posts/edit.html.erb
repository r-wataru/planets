<%
  @page_title_icon = 'pencil'
  @page_title_text = "#{@post.title}の編集"

  @breadcrumbs = [
    [ 'home', 'トップ', :root ],
    [ 'list', '掲示板一覧', :posts ],
    [ 'book', "#{@post.title}", [ @post, :comments ] ]]
%>

<div class="row">
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-heading">掲示板作成</div>
      <div class="panel-body">
        <%= form_for @post do |f| %>
          <%= render "form", f: f %>
        <% end %>
      </div>
    </div>
  </div>
</div>