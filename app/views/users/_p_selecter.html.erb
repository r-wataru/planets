<%
  select_array = @picher_characters.map{|a| [ a.name, a.id ]}
  selected_array = @user.characters.pitcher.map{|b| [ b.name, b.id ]}
  select_array = select_array - selected_array
%>
<div class="col-md-12">
  <div class="col-md-4">
    <%= select_tag :selecting_name,
      options_for_select(select_array, ""), class: "form-control selecting-condition", size: "6" %>
  </div>
  <div class="col-md-4">
    <div style="text-align: center;">
      <button type="button" class="btn btn-default navbar-btn add-button">追加</button>
      <button type="button" class="btn btn-default navbar-btn remove-button">削除</button>
    </div>
  </div>
  <div class="col-md-4">
    <%= select_tag :selected_name,
      options_for_select(selected_array, ""), class: "form-control selected-condition", size: "6" %>
  </div>
</div>