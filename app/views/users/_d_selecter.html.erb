<%
  select_array = @characters.map{|a| [ a.name, a.id ]}
  selected_array = @user.characters.result.map{|b| [ b.name, b.id ]}
  select_array = select_array - selected_array
  array = [["良い",0],["良い/悪い",1],["悪い",2]]
%>
<div class="col-md-12">
  <div class="col-md-4">
    <%= select_tag :selecting_name,
      options_for_select(select_array, ""), class: "form-control selecting-condition selecting-defense", size: "6" %>
  </div>
  <div class="col-md-4">
    <div style="text-align: center;">
      <span class="jquery-title">属性</span><br/>
      <button type="button" class="btn btn-default navbar-btn add-button" data-int="1">追加</button>
      <button type="button" class="btn btn-default navbar-btn remove-button" data-int="1">削除</button>
      <button type="button" class="btn btn-default navbar-btn new-selecting-form-show-button" data-int="2">新規作成</button>
    </div>
  </div>
  <div class="col-md-4">
    <%= select_tag :selected_name,
      options_for_select(selected_array, ""), class: "form-control selected-condition selected-defense", size: "6" %>
  </div>
</div>

<div class="col-md-12 new-selecting-form-d" style="margin-top: 10px;">
  <div class="col-md-4">
    <span class="jquery-title">親属性</span>
  </div>
  <div class="col-md-8">
    <span class="error-message-span new-select-des-d"></span>
    <%= text_field_tag :new_selecting_description, "", placeholder: "属性の説明",
      class: "form-control new-selecting-field-d" %>
    <span class="error-message-span new-select-name-d"></span>
    <%= text_field_tag :new_selecting_name, "", placeholder: "属性名",
      class: "form-control new-selecting-field" %>
    <%= select_tag :new_selection_condition,
      options_for_select(array, ""), class: "form-control breaking-select new-selecting-condition-d" %>
    <button type="button" class="btn btn-default navbar-btn add-selecting-button" data-str="new-selectin-d">追加</button>
  </div>
</div>